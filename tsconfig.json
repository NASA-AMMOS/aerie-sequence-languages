{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "dist/cjs",
    "baseUrl": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["ESNext", "DOM"]
  },
  "include": [
    "src/**/*.ts",
    "src/languages/satf/grammar/satf-sasf.grammar.js",
    "src/languages/satf/grammar/satf-sasf.grammar.terms.js",
    "src/languages/seq-n/seq-n.grammar.js",
    "src/languages/seq-n/seq-n.grammar.terms.js",
    "src/languages/stol/stol-linter.ts",
    "src/langauges/stol/stol.grammar.js",
    "src/languages/stol/stol.grammar.terms.js"
  ],
  "exclude": ["./node_modules","./dist","**/*.test.ts"]
}